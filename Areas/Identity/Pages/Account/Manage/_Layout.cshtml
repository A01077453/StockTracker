@{
    ViewData["ParentLayout"] = Layout;
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<head>

</head>

<body>
    <div style="border: 2px solid gainsboro; border-radius: 8px; padding: 20px; background: white;">
        <div style="display: grid; grid-template-columns: 78.8% 10% 10%; column-gap: 5px;">
            <h1>My Account</h1>

            <a href="~/" style="text-decoration: none;">
                <button type="button" class="btn btn-success"
                    style="border-radius: 7px; display: flex; align-items: center; justify-content: center; height: 50px;">
                    <b>Return</b>
                </button>
            </a>

            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger"
                    style="border-radius: 7px;  display: flex; align-items: center; justify-content: center; height: 50px;">
                    <b>Log Out</b>
                </button>
            </form>
        </div>

        <div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
@RenderSection("Scripts", required: false)
}
