@page "/"

<PageTitle>Home</PageTitle>

<div class="wrapper">

  <div class="ourChart">
    <p>Chart place holder</p>
    <LineGraphs @ref="graph"/>
  </div>

  <div class="rightContainer">
    <div id="searchTickerContainer">
      <h3>Search a Ticker</h3>
      <TestStock @ref="stock" />
    </div>

    <div id="border"></div>

    <div id="favouritesContainer">
      <h3>Favourites</h3>
      <div style="height: 234px; width: 100%; overflow-y: scroll; padding-top: 5px;">
        <Favourites @ref="table" View="FavouritesSetTickerName"/>
      </div>
    </div>
  </div>

</div>

<div class="news">
  <br>
  <div id="newsContainer">
    @* <News /> *@
  </div>
</div>

<button @onclick="balls">Hit ME</button>

@code {
  @* Global Ticker Name *@
  private String? global_tickerName = null;

  //Component variables
  private TestStock? stock; 
  private Favourites? table; 
  private LineGraphs? graph; 

  @* Sets the global_tickerName for Favourites *@
  public async void FavouritesSetTickerName(string tickerName)
  {
    //Reset the global_tickerName
    this.global_tickerName = null;

    //Set tickerName
    this.global_tickerName = tickerName;

    var today = DateTime.Now.ToString("yyyy-MM-dd"); //From Date
    var lastYear = DateTime.Now.AddYears(-1).ToString("yyyy-MM-dd"); //To Date

    Console.WriteLine(today);
    Console.WriteLine(lastYear);

    //Call and Invoke API Function from Favourites Object + Seed Chart
    await graph!.getCurrentDayQuote(this.global_tickerName, lastYear, today);

    foreach (var item in graph!.mCurrentStock!.results)
    {
      Console.WriteLine(item.c);
    }

  }

  public void balls()
  {
    @foreach (var stat in stock?.mCurrentStock?.results!)
    {
      Console.WriteLine(stat.T);
    }
  }

}